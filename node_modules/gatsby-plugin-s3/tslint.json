{
    "extends": [
        "tslint-config-oberon"
    ],
    "rules": {
        "no-console": false,
        "interface-name": false,
        "no-any": false,
        "max-line-length": [
            true,
            {
                "ignore-pattern": "^\\s*((//|\\*)\\s+)?(.{1,3} )?(https?)://[^ ]+$",
                "limit": 120
            }
        ]
    },
    "linterOptions": {
        "exclude": [
            "**/**.js"
        ]
    }
}